{
  "name": "qa-automation-challenge",
  "version": "1.0.0",
  "description": "QA Automation Challenge with Playwright and TypeScript - DemoBlaze E2E Framework",
  "main": "index.js",
  "scripts": {
    "bddgen": "bddgen",
    "pretest": "npm run bddgen",
    "test": "npm run bddgen && playwright test --project=chromium",
    "test:login": "npm run bddgen && playwright test --grep \"@login\" --project=chromium",
    "test:login:headed": "npm run bddgen && playwright test --grep \"@login\" --headed --project=chromium --workers=1",
    "test:cart": "npm run bddgen && playwright test --grep \"@cart\" --project=chromium",
    "test:cart:headed": "npm run bddgen && playwright test --grep \"@cart\" --headed --project=chromium --workers=1",
    "test:e2e": "npm run bddgen && playwright test --grep \"@e2e\" --project=chromium",
    "test:e2e:headed": "npm run bddgen && playwright test --grep \"@e2e\" --headed --project=chromium --workers=1",
    "test:smoke": "npm run bddgen && playwright test --grep \"@smoke\" --project=chromium",
    "test:smoke:headed": "npm run bddgen && playwright test --grep \"@smoke\" --headed --project=chromium --workers=1",
    "test:happy-path": "npm run bddgen && playwright test --grep \"@happy-path\" --project=chromium",
    "test:happy-path:headed": "npm run bddgen && playwright test --grep \"@happy-path\" --headed --project=chromium --workers=1",
    "test:edge-case": "npm run bddgen && playwright test --grep \"@edge-case\" --project=chromium",
    "test:edge-case:headed": "npm run bddgen && playwright test --grep \"@edge-case\" --headed --project=chromium --workers=1",
    "test:security": "npm run bddgen && playwright test --grep \"@security\" --project=chromium",
    "test:security:headed": "npm run bddgen && playwright test --grep \"@security\" --headed --project=chromium --workers=1",
    "test:api": "playwright test tests/api",
    "test:headed": "npm run bddgen && playwright test --headed --project=chromium --workers=1",
    "test:debug": "npm run bddgen && playwright test --debug --project=chromium",
    "test:chromium": "npm run bddgen && playwright test --project=chromium",
    "test:firefox": "npm run bddgen && playwright test --project=firefox",
    "test:webkit": "npm run bddgen && playwright test --project=webkit",
    "report": "playwright show-report reports/html-report",
    "clean": "rimraf reports playwright-report test-results .features-gen",
    "prepare": "playwright install",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "demoblaze"
  ],
  "author": "Hien Pham Van",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "playwright-bdd": "^8.4.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
